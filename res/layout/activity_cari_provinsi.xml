<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <com.example.tariand.TouchImageView
        android:id="@+id/imap"
        android:layout_width="543dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/b4"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@+id/b2"
        android:layout_toRightOf="@+id/b2"
        android:background="@drawable/tombol" />

    <Button
        android:id="@+id/b1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_above="@+id/b2"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/tombol" />

    <Button
        android:id="@+id/b2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/b3"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/b1"
        android:background="@drawable/tombol" />

    <Button
        android:id="@+id/b6"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignLeft="@+id/b3"
        android:layout_below="@+id/b5"
        android:layout_marginTop="14dp"
        android:background="@drawable/tombol" />

    <Button
        android:id="@+id/b5"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/b3"
        android:background="@drawable/tombol" />

    <Button
        android:id="@+id/b7"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignBaseline="@+id/b3"
        android:layout_alignBottom="@+id/b3"
        android:layout_toRightOf="@+id/b5"
        android:background="@drawable/tombol" />

    <Button
        android:id="@+id/b3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_above="@+id/b5"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/b4"
        android:background="@drawable/tombol" />

    <Button
        android:id="@+id/b9"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@+id/b8"
        android:layout_toRightOf="@+id/b7"
        android:background="@drawable/tombol" />

    <Button
        android:id="@+id/b10"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignLeft="@+id/b9"
        android:layout_below="@+id/b6"
        android:background="@drawable/tombol" />

    <Button
        android:id="@+id/b8"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignBaseline="@+id/b5"
        android:layout_alignBottom="@+id/b5"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/b9"
        android:background="@drawable/tombol" />

</RelativeLayout>