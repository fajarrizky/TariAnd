<resources>

    <style name="AppTheme" parent="android:Theme.Light" />

     <style name="main_menu">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:textColor">@color/menu_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">50dip</item>
        <item name="android:layout_marginRight">50dip</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/menu_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>
    
</resources>