<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/blue" />

            <stroke android:width="1dip" android:color="@color/blue_stroke" />

            <corners android:radius="50dip" />

            <padding android:left="30dip" android:right="30dip" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/blue_gradE" android:startColor="@color/blue_gradS" />

            <stroke android:width="1dip" android:color="@color/blue_stroke" />

            <corners android:radius="50dip" />

            <padding android:bottom="2dip" android:left="6dip" android:right="6dip" android:top="2dip" />
        </shape></item>

</selector>